<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActualizarIncidencia1Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlbr_reg_incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Datos Personales"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txt_cedula_actualizar_incidencia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                tools:hint="Ej: 117410990" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/txt_titulo_datos_actualizar1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Datos de la Incidencia"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/categoria"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="50px" />

            <Spinner
                android:id="@+id/empresa"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="50px"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/Provincias_Registrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/Canton_Registrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/Distrito_Registrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_latitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/txt_longitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView_actualizar1"
                    android:layout_width="match_parent"
                    android:layout_height="304dp"
                    android:layout_marginTop="100px"
                    android:layout_weight="1" />
            </LinearLayout>

            <EditText
                android:id="@+id/txt_descripcion_actualizar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:ems="10"
                android:hint="@string/txt_incidencia"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_incidencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/btn_subirFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subir Foto" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_actualizar_incidencia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="@string/txt_actualizar_incidencia"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Datos Personales"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txt_cedula_actualizar_incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:hint="Ej: 117410990" />

    <EditText
        android:id="@+id/txt_nombre_actualizar_incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:ems="10"
        android:hint="Ej: Katherine"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_apellido1_actualizar_incidencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            tools:hint="Ej: Martinez" />

        <EditText
            android:id="@+id/txt_apellido2_actualizar_incidencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ej: Chacon"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_titulo_datos_actualizar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Datos de la Incidencia"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/txt_categoria_incidencia_actualizar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50px" />

    <Spinner
        android:id="@+id/txt_categoria_empresa_actualizar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_provincia_actualizar_incidencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/txt_provincia"
            android:inputType="number" />

        <EditText
            android:id="@+id/txt_canton_actualizar_incidencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/txt_canton"
            android:inputType="number" />

        <EditText
            android:id="@+id/txt_distrito_actualizar_incidencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/txt_distrito"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_siguiente_actualizar_incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_siguiente_incidencia"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/txt_ubicacion_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="San Jose, Calle 12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView_actualizar"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_marginTop="100px"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/txt_descripcion_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:ems="10"
        android:hint="@string/txt_incidencia"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_actualizar_incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/txt_actualizar_incidencia"
        android:textColor="@android:color/white" />


</LinearLayout>