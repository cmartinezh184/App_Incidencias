<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="50dp"
    android:paddingRight="20dp"
    tools:context=".AgregarIncidencia2Activity">

    <EditText
        android:id="@+id/txt_ubicacion_agregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="San Jose, Calle 12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView_agregar"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:layout_marginTop="100px"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/txt_descripcion_agregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:ems="10"
        android:hint="Hueco"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_agregar_incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/txt_registrar_incidencia"
        android:textColor="@android:color/white" />

</LinearLayout>